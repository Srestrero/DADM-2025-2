<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions for online game -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_custom_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_custom_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidTicTacToeTutorial2"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".ServerConfigActivity"
            android:exported="false"
            android:theme="@style/Theme.AndroidTicTacToeTutorial2.NoActionBar" />

        <activity
            android:name=".GameListActivity"
            android:exported="false"
            android:theme="@style/Theme.AndroidTicTacToeTutorial2.NoActionBar" />

        <activity
            android:name=".OnlineGameActivity"
            android:exported="false"
            android:theme="@style/Theme.AndroidTicTacToeTutorial2.NoActionBar" />

    </application>

</manifest>